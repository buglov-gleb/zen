<context>
  <pattern name="City" value="(Москв*|Новосибирск*)"/> <!-- Custom pattern -->
	<input>
		<pattern value="* связ* * в $City"/> <!-- Input pattern -->
		<var name="Answer" value="Да" if="full($City)"/>
		<var name="Answer" value="Нет" if="empty($City)"/>
		<output value="$Answer"/>
	</input>
</context>
