<!--- А ваша связь есть в [любой город]?
- Да/Нет (в зависимости от переменной $CityPresence)-->

<context>
    <input pattern="* связ* * в $CityPresence">
		<output value="Да" if="full($CityPresence)"/>
		<context if="empty($CityPresence)"/>
			<output value="Нет"/>
    </input>
</context>
